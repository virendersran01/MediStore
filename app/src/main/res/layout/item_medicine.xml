<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="10dp"
    app:cardElevation="4dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textMedicineName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:text="@string/app_name"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imageExpiryDate"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginTop="12dp"
            android:src="@drawable/ic_date"
            android:tint="@android:color/holo_red_dark"
            app:layout_constraintStart_toStartOf="@id/textMedicineName"
            app:layout_constraintTop_toBottomOf="@id/textMedicineName" />


        <TextView
            android:id="@+id/textExpiryDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="Expiry Date"
            android:textColor="@android:color/holo_red_dark"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@id/imageExpiryDate"
            app:layout_constraintStart_toEndOf="@id/imageExpiryDate"
            app:layout_constraintTop_toTopOf="@id/imageExpiryDate"/>

        <ImageView
            android:id="@+id/imageReminderDate"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginEnd="8dp"
            android:src="@drawable/ic_date"
            android:tint="@android:color/holo_blue_dark"
            app:layout_constraintEnd_toStartOf="@id/textReminderDate"
            app:layout_constraintTop_toTopOf="@id/imageExpiryDate"/>


        <TextView
            android:id="@+id/textReminderDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reminder Date"
            android:textColor="@android:color/holo_blue_dark"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="@id/textMedicineName"
            app:layout_constraintTop_toTopOf="@id/textExpiryDate"/>


    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>